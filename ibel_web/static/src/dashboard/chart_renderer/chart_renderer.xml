<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ibel_web.ChartRenderer" owl="1">
        <div t-att-class="'col-lg-'+(props.size ? props.size : '3')+' m-0 p-0'">
            <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                    <h3 class="text-primary fw-bold"> <t t-esc="props.label"/></h3>
                    <div class="px-3 py-1 bg-primary cursor-pointer">
                        <span class="fa fa-arrow-right text-white"/>
                    </div>
                </div>
                <div>
                    <canvas t-ref="chart" />
                </div>
            </div>
        
        </div>
    </t>
</templates>
